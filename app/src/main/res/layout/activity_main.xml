<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/skyimage"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@mipmap/smartfarmer2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:textColor="#000" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:text="Voltage"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="Current"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signal %"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:background="#000"
                android:text="VOLTAGE"
                android:textColor="#000" />

            <TextView
                android:id="@+id/editText2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="#000"
                android:text="CURRENT"
                android:textColor="#000" />

            <TextView
                android:id="@+id/editText3"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:background="#000"
                android:text="SIGNAL"
                android:textColor="#000" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="Update at :"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        android:layout_marginBottom="14dp"
        android:background="@mipmap/farm"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:addStatesFromChildren="true"
            android:background="@mipmap/samrat2"
            android:baselineAligned="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnonSMS"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"

                android:background="@drawable/green"
                android:text="ON"
                android:textColor="@android:color/background_light" />


            <Button
                android:id="@+id/btnoffSMS"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/sample"
                android:text="OFF"
                android:textColor="@android:color/background_light"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="198dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnsetting"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/yellow"
                android:text="Setting"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnstatus"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:background="@drawable/blue"
                android:text="Status"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btncall"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/lightgreen"
                android:src="@mipmap/phone"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnreset"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:background="@drawable/pink"
                android:text="Reset"
                android:textAllCaps="false"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
